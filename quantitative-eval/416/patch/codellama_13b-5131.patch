

// Define a function to convert decimal to hexadecimal
char* dec_to_hex(int dec) {
  static char hex[10];
  int i = 0;
  while (dec > 0) {
    int digit = dec % 16;
    hex[i] = (digit < 10) ? '0' + digit : 'A' + digit - 10;
    i++;
    dec = dec / 16;
  }
  hex[i] = '\0';
  return hex;
}

// Define a function to convert hexadecimal to binary
char* hex_to_bin(char* hex) {
  static char bin[10];
  int i = 0;
  int len = strlen(hex);
  while (i < len) {
    int digit = hex[i] - '0';
    if (digit < 0 || digit > 9) {
      digit = (hex[i] - 'A' + 10) % 16;
    }
    bin[i] = (digit < 2) ? '0' + digit : 'A' + digit - 2;
    i++;
  }
  bin[i] = '\0';
  return bin;
}

// Define a function to convert binary to hexadecimal
char* bin_to_hex(char* bin) {
  static char hex[10];
  int i = 0;
  int len = strlen(bin);
  while (i < len) {
    int digit = bin[i] - '0';
    if (digit < 0 || digit > 1) {
      digit = (bin[i] - 'A' + 2) % 4;
    }
    hex[i] = (digit < 10) ? '0' + digit : 'A' + digit - 10;
    i++;
  }
  hex[i] = '\0';
  return hex;
}

